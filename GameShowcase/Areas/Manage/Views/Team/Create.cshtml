@model GameBaseInfoViewModel

@{
    ViewData["Title"] = "创建游戏";
    Layout = "~/Areas/Manage/Views/Shared/_TeamLayout.cshtml";
}

<div style="width: 52%; min-width: 480px; margin: 24px auto 36px">
  <form asp-action="Create">
    <div class="form-horizontal">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Title" class="col-md-3 control-label"></label>
        <div class="col-md-9">
          <input asp-for="Title" class="form-control" />
          <span asp-validation-for="Title" class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <label asp-for="Genre" class="col-md-3 control-label"></label>
        <div class="col-md-9">
          <input asp-for="Genre" class="form-control" />
          <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <label asp-for="CoverUrl" class="col-md-3 control-label"></label>
        <div class="col-md-9">
          <input asp-for="CoverUrl" class="form-control" />
          <span asp-validation-for="CoverUrl" class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <label asp-for="DemoUrl" class="col-md-3 control-label"></label>
        <div class="col-md-9">
          <input asp-for="DemoUrl" class="form-control" />
          <span asp-validation-for="DemoUrl" class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <input type="submit" value="提交"
                 class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" />
        </div>
      </div>
    </div>
  </form>
</div>

@section Scripts {
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
