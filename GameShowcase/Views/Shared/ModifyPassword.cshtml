@using GameShowcase.Data;
@using GameShowcase.Models.AccountViewModels;
@model ModifyPasswordViewModel

@{
    var CurrentAccount = ViewData["CurrentAccountData"] as CurrentAccountData;
    ViewData["Title"] = "修改密码";
    Layout = CurrentAccount.IsAdmin ?
        "~/Areas/Manage/Views/Shared/_Layout.cshtml" :
        "~/Areas/Manage/Views/Shared/_TeamLayout.cshtml";
}

<div style="width: 52%; min-width: 480px; margin: 36px auto 48px">
  <form asp-area="" asp-controller="Account" asp-action="ModifyPassword">
    <div class="form-horizontal">

      <div id="success-prompt"
           class="alert alert-success" style="display: none">
        修改成功
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="form-group">
        <label asp-for="OriginPassword" class="col-md-3 control-label"></label>
        <div class="col-md-9">
          <input maxlength="16" asp-for="OriginPassword" class="form-control" />
          <span asp-validation-for="OriginPassword" class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <label asp-for="NewPassword" class="col-md-3 control-label"></label>
        <div class="col-md-9">
          <input maxlength="16" asp-for="NewPassword" class="form-control" />
          <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
      </div>
      <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-3 control-label"></label>
        <div class="col-md-9">
          <input maxlength="16" asp-for="ConfirmPassword" class="form-control" />
          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
      </div>

      <div asp-validation-summary="ModelOnly"
           class="alert alert-danger col-md-offset-3 col-md-9">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
          <input type="submit" value="提交"
                 class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored" />
        </div>
      </div>
    </div>
  </form>
</div>

@section Scripts{
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
  @{ await Html.RenderPartialAsync("_ModifySuccessScriptsPartial"); }
}
